# FritzBox Router Watchdog Configuration
# Copy this file to .env and fill in your actual values

# Router Connection Settings (Required)
FRITZBOX_HOST=192.168.1.1
FRITZBOX_PORT=49000
FRITZBOX_USERNAME=your_username
FRITZBOX_PASSWORD=your_password

# Monitoring Settings (Optional - defaults shown)
CHECK_INTERVAL_MINUTES=1
MAX_FAILURES=2
RESTART_WAIT_MINUTES=3

# Cooldown Settings (prevents excessive restarts)
MAX_RESTARTS_BEFORE_COOLDOWN=3
COOLDOWN_HOURS=12

# Advanced Settings (Optional)
# PING_TIMEOUT=10
# PING_COUNT=3
# LOG_LEVEL=INFO